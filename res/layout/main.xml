<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numero1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainmenu2" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/start_btn"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:background="@drawable/buttonplay" />

        <ImageButton
            android:id="@+id/market_btn"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonmarket" />

        <ImageButton
            android:id="@+id/rules_btn"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonrules" />

        <ImageButton
            android:id="@+id/scores_btn"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonscores" />

        <ImageButton
            android:id="@+id/options_btn"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonoptions" />

        <ImageButton
            android:id="@+id/exit_btn"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonexit" />
    </LinearLayout>

</RelativeLayout>