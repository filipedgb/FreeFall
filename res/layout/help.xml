<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/highscoremenu" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="How to play?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="25dp"
               android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
               
        android:text="Your spying mission on planet Earth failed. You lost control of your spaceship and you&apos;re now free falling into earth at an increasing hallucinating speed! Avoid any physical objects you may encounter and remember your fuel is a limited resource!\n\n Good luck!"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="32dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/items"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:background="@drawable/buttonitems" />

        <ImageButton
            android:id="@+id/controls"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttoncontrols" />
    </LinearLayout>

</RelativeLayout>